<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@android:color/holo_blue_dark"
    tools:context=".PregledPitanjaActivity"
    >


    <TextView
        android:id="@+id/pregledPitanjaText"
        android:layout_width="376dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Pitanje pitanjce pitanjce"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pregledPitanjaImage" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/pregledPitanjaChipGroup"
        android:layout_width="253dp"
        android:layout_height="230dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:longClickable="false"
        app:chipSpacing="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaText"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/pregledPitanjaOdg1Chip"
            android:layout_width="253dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:checkable="true"
            android:backgroundTint="@android:color/holo_blue_bright"

            android:clickable="true"
            android:text="Odgovorrr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pregledPitanjaOdg2Chip"
            android:layout_width="248dp"
            android:layout_height="54dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:checkable="true"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaOdg1Chip" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pregledPitanjaOdg3Chip"
            android:layout_width="252dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/colorBlueDark"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:checkable="true"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.608"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaOdg2Chip" />
    </com.google.android.material.chip.ChipGroup>


    <ImageButton
        android:id="@+id/pregledPitanjaNextIB"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaChipGroup"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/pregledPitanjaImage"
        android:layout_width="295dp"
        android:layout_height="216dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="84dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toTopOf="@+id/pregledPitanjaText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/osm_ic_follow_me" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="POENI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pregledPitanjaProgressTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregledPitanjaPoeniTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="00"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pregledPitanjaProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ProgressBar
        android:id="@+id/pregledPitanjaProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:outlineAmbientShadowColor="@color/colorZelenkasta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregledPitanjaProgressTV" />

    <TextView
        android:id="@+id/pregledPitanjaProgressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitanja, progres je odmah ispod labele"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>